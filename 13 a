#include <stdio.h>
#include <string.h>

#define MAX_DESTINATIONS 10
#define MAX_NAME_LENGTH 50

typedef struct {
    char name[MAX_NAME_LENGTH];
    char description[MAX_NAME_LENGTH];
    int duration; // in days
} Destination;

typedef struct {
    Destination destinations[MAX_DESTINATIONS];
    int num_destinations;
} TravelPlan;

void add_destination(TravelPlan* plan, char* name, char* description, int duration) {
    if (plan->num_destinations < MAX_DESTINATIONS) {
        strcpy(plan->destinations[plan->num_destinations].name, name);
        strcpy(plan->destinations[plan->num_destinations].description, description);
        plan->destinations[plan->num_destinations].duration = duration;
        plan->num_destinations++;
    } else {
        printf("Travel plan is full. Cannot add more destinations.\n");
    }
}

void display_travel_plan(TravelPlan plan) {
    printf("Travel Plan:\n");
    for (int i = 0; i < plan.num_destinations; i++) {
        printf("Destination %d: %s (%d days)\n", i + 1, plan.destinations[i].name, plan.destinations[i].duration);
        printf("Description: %s\n", plan.destinations[i].description);
        printf("\n");
    }
}

int main() {
    TravelPlan plan = {{}, 0};

    int choice;
    char name[MAX_NAME_LENGTH];
    char description[MAX_NAME_LENGTH];
    int duration;

    while (1) {
        printf("Travel Planner\n");
        printf("1. Add Destination\n");
        printf("2. Display Travel Plan\n");
        printf("3. Exit\n");
        printf("Enter your choice: ");
        scanf("%d", &choice);

        switch (choice) {
            case 1:
                printf("Enter destination name: ");
                scanf("%s", name);
                printf("Enter destination description: ");
                scanf("%s", description);
                printf("Enter destination duration (in days): ");
                scanf("%d", &duration);
                add_destination(&plan, name, description, duration);
                break;
            case 2:
                display_travel_plan(plan);
                break;
            case 3:
                return 0;
            default:
                printf("Invalid choice. Please try again.\n");
        }
    }

    return 0;
}
